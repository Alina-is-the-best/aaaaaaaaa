#include<Servo.h>
int val;
String symb = "L";
Servo s0, s1, s2, s3, s4;
Servo s[] = {s0, s1, s2, s3, s4};
bool a12=0;
int t;
int t_old;
int PIN[]={3,5,6,9,10};
int KUL[]={35,105,180,180,16};
int LAD[]={144,156,0,0,180};
int OK[]={58,105,121,0,180};
int A[] = {1,2,3,4,5};
void setup() {
Serial.begin(9600);
for (int i = 0; i<5; i++){
  s[i].attach(PIN[i]);
}
 pinMode(OUTPUT,13);
 pinMode(OUTPUT,12);
}
void loop() {
  if(Serial.available()){
    symb = Serial.readStringUntil('\n');
  }
  if ( symb ==  "P"  ){
    digitalWrite(13,1);
  
    for(int i=0; i<5; i++){
      val=map(analogRead(A[i]),0,1023,LAD[i],KUL[i]);
      s[i].write(val);
      Serial.print(val);
      Serial.print(" ");
    }
    Serial.println();
  }
  if ( symb == "L"){
    for(int i = 0; i<5; i++){
    s[i].write(LAD[i]);
    digitalWrite(12,0);
    digitalWrite(13,0);
  }
   }
  else if ( symb == "K" ) {
    for(int i = 0; i<5; i++){
    s[i].write(KUL[i]);
        digitalWrite(13,0);
    t=millis();
    if(t-t_old>=500){
      t_old=t;
      if(a12==0){
        a12=1;
        digitalWrite(12,1);
      }else{
        a12=0;
        digitalWrite(12,0);
      }
  }
   }}
  else if ( symb == "OK" ) {
    for(int i = 0; i<5; i++){
    s[i].write(OK[i]);
    digitalWrite(13,0);
    t=millis();
    if(t-t_old>=250){
      t_old=t;
      if(a12==0){
        a12=1;
        digitalWrite(12,1);
      }else{
        a12=0;
        digitalWrite(12,0);
      }
    }
  }
   }
 }

 
